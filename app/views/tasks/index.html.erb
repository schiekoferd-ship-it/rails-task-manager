<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
        <%= link_to task_path(task) do %>
          <%= task.title %>
        <% end %>
        <%= link_to "Delete task", task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
<%= link_to "Add a new task", task_new_path %>
